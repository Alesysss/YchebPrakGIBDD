<Window x:Class="YchebPrakGIBDD.Windows.VoditelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YchebPrakGIBDD.Windows"
        mc:Ignorable="d"
        Title="Водители" 
        Height="595" 
        MaxHeight="605"
        MinHeight="565"
        Width="1150"
        MaxWidth="1200"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="#d1eefc"
        Loaded="MainWindow_Loaded">
    <Window.Resources>
        <!-- Стиль для заголовков DataGrid -->
        <Style TargetType="DataGridColumnHeader" x:Key="DataGridStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <!-- Стиль для ComboBox-->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <!--Стиль для TextBox-->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Стиль для Button-->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="230"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#fffcda"/>
            <Setter Property="BorderBrush" Value="#fcf279"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fffef2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#edebcc"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--Стиль для Button2-->
        <Style x:Key="ButtonStyle2" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#e0a9af"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e3bfc3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#c29197"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--Стиль для Button3-->
        <Style x:Key="ButtonStyle3" TargetType="Button">
            <Setter Property="Width" Value="230"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#fffcda"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fffef2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#edebcc"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Стиль для текстового блока -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <!--Верхний бар-->
        <Rectangle Height="55"
    VerticalAlignment="Top"
    Fill="#e0a9af"
    Grid.Row="0"
    Grid.ColumnSpan="6"/>
        <Image Source="\Images\gibdd_logo.png"
Height="48"
Width="48"
Grid.Row="0"
Grid.Column="0"
Margin="20 0 0 0"
HorizontalAlignment="Left"
VerticalAlignment="Center"/>
        <TextBlock Text="Водитель"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Montserrat"
        FontSize="30"
        FontWeight="Bold"
        Grid.Column="2"
        Grid.ColumnSpan="2"
                   Grid.Row="0"/>
        
        <Button Click="ButtonGlavnaia"
     Content="Главная"
     Style="{StaticResource ButtonStyle2}"
     Height="auto"
     Width="80"
     HorizontalAlignment="Right"
     Margin="0, 0, 15, 0"
     Grid.Row="0"
     Grid.Column="5"/>
        <!--Основная часть кода-->
            <DataGrid x:Name="VoditelDG" 
                      ColumnHeaderStyle="{StaticResource DataGridStyle}"
                      AutoGenerateColumns="False" 
                      Margin="10, 0, 10, 0"
                      VerticalAlignment="Stretch"
                      Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="6">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding ID}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Имя" 
                                        Binding="{Binding Imia}" 
                                        Width="*" />
                    <DataGridTextColumn Header="Фамилия" 
                                        Binding="{Binding Familia}" 
                                        Width="*" />
                    <DataGridTextColumn Header="Второе имя" 
                                        Binding="{Binding Vtoroe_Imia}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Серия паспорта" 
                                        Binding="{Binding Seria_pasporta}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Номер паспорта" 
                                        Binding="{Binding Nomer_Pasporta}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Адрес прописки (ID)" 
                                        Binding="{Binding Adres_prop_ID}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Адрес проживания (ID)" 
                                        Binding="{Binding Adres_proziv_ID}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Место работы (ID)" 
                                        Binding="{Binding Mesto_raboti_ID}" 
                                        Width="Auto" />
                    <DataGridTextColumn Header="Телефон" 
                                        Binding="{Binding Telefon}" 
                                        Width="*" />
                    <DataGridTextColumn Header="Почта" 
                                        Binding="{Binding Pochta}" 
                                        Width="*" />                    
                    <DataGridTemplateColumn Header="Фото">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image x:Name="mainWindowImage" 
                                       Source="{Binding Foto}" 
                                       Width="100"
                                       Height="100"
                                       Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Описание" 
                                        Binding="{Binding Opisanie}" 
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>            
                <Button Content="Добавить"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="AddButton"
                        Grid.Row="4"
                        Grid.Column="2"/>
                <Button Content="Изменить"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalAlignment="Center"
                        Click="ChangeButton"
                        Grid.Row="4"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"/>
                <Button Content="Удалить"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalAlignment="Right"
                        Click="DeleteButton"
                        Grid.Row="4"
                        Grid.Column="3"/>  

            <Button Content="Адрес"
            Style="{StaticResource ButtonStyle}"
            HorizontalAlignment="Center"
            Click="AdresButton"
                    Grid.Column="2"
                    Grid.Row="6"/>
        <Button Content="Место работы"
            Style="{StaticResource ButtonStyle}"
            HorizontalAlignment="Center"
            Click="MestoRabotiButton"
                Grid.Column="3"
                Grid.Row="6"/>
        <!--Нижний бар-->
        <Rectangle Fill="#e0a9af"
    Grid.Row="8"
    Grid.RowSpan="2"
    Grid.ColumnSpan="6"/>

        <TextBlock Text="Версия приложения: 1.0.0"
            FontSize="12"
            Margin="20, 7, 0.5, 0.5"
            FontFamily="Montserrat"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Grid.Row="8"
            Grid.ColumnSpan="6"/>
        <TextBlock Text="Никогда не сообщайте свои данные третьим лицам"
            FontSize="12"
            Margin="20, 9 0.5, 7"
            FontFamily="Montserrat"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="9"
            Grid.ColumnSpan="6"/>

    </Grid>
</Window>